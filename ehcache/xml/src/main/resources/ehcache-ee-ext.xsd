<xs:schema version="1.0"
           xmlns="http://www.terracottatech.com/v3/terracotta/ehcache"
           xmlns:eh="http://www.ehcache.org/v3"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified"
           targetNamespace="http://www.terracottatech.com/v3/terracotta/ehcache">

  <xs:import namespace="http://www.ehcache.org/v3"/>

  <xs:element name="cluster" type="cluster-spec" substitutionGroup="eh:service-creation-configuration">
    <xs:annotation>
      <xs:documentation xml:lang="en">
        Used within the /config/service element of an Ehcache configuration, this element
        describes cluster service properties.
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <xs:complexType name="cluster-spec">
    <xs:sequence minOccurs="1" maxOccurs="1">
      <xs:choice>
        <xs:element name="cluster-connection" type="cluster-connection-spec"/>
        <xs:element name="connection" type="connection-spec"/>
      </xs:choice>

      <xs:element name="read-timeout" type="eh:time-type" minOccurs="0" maxOccurs="1">
        <xs:annotation>
          <xs:documentation>
            Specifies the amount of time a cache read operation will wait for a response from a cluster
            server before abandoning the cluster operation and returning a null.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="write-timeout" type="eh:time-type" minOccurs="0" maxOccurs="1">
        <xs:annotation>
          <xs:documentation>
            Specifies the amount of time a cache write operation will wait for a response from a cluster
            server before abandoning the cluster operation.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="connection-timeout" type="eh:time-type" minOccurs="0" maxOccurs="1">
        <xs:annotation>
          <xs:documentation>
            Specifies the amount of time a cache will wait to connect to a cluster
            server before abandoning the cluster operation.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="server-side-config" type="server-side-config-spec" minOccurs="0" maxOccurs="1">
        <xs:annotation>
          <xs:documentation>
            Specifies the server-side configuration of the entity to be accessed and or created.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="connection-spec">
    <xs:attribute name="url" type="connectionUrl" use="required">
      <xs:annotation>
        <xs:documentation xml:lang="en">
          Identifies a single cluster member by URL.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="security-root-directory" type="xs:string">
      <xs:annotation>
        <xs:documentation xml:lang="en">
          Specifies the path to a directory containing security configuration information. The contents of the
          directory must follow the well-defined structure.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:simpleType name="connectionUrl">
    <xs:restriction base="xs:anyURI">
      <xs:pattern value="\w+://([^\]\[/?#@]+@)?[^:?#/]+(:[1-9][0-9]{0,4})?(,([^\]\[/?#@]+@)?[^:?#/]+(:[1-9][0-9]{0,4})?)*(/[^\?#]*)?(\?[^#]*)?(#.*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="cluster-connection-spec">
    <xs:sequence>
      <xs:element name="server" type="server" maxOccurs="unbounded"/>
    </xs:sequence>

    <xs:attribute name="cluster-tier-manager" type="xs:string" use="required">
      <xs:annotation>
        <xs:documentation xml:lang="en">
          Cluster Tier Manager identifier.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>

    <xs:attribute name="security-root-directory" type="xs:string">
      <xs:annotation>
        <xs:documentation xml:lang="en">
          Specifies the path to a directory containing security configuration information. The contents of the
          directory must follow the well-defined structure.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="server">
    <xs:annotation>
      <xs:documentation xml:lang="en">
        Data specific to a particular server.
      </xs:documentation>
    </xs:annotation>

    <xs:attribute name="host" type="host" use="required">
      <xs:annotation>
        <xs:documentation>
          The host that the server is running on.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
    <xs:attribute name="port" type="xs:positiveInteger">
      <xs:annotation>
        <xs:documentation>
          The port that the server is listening on.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:simpleType name="host">
    <xs:restriction base="xs:string">
      <xs:whiteSpace value="collapse" />
      <xs:minLength value="1" />
      <xs:maxLength value="255" />
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="server-side-config-spec">
    <xs:sequence>
      <xs:element name="default-resource" type="default-resource-spec" minOccurs="0">
        <xs:annotation>
          <xs:documentation>
            Specifies the default server-side storage resource to use for storing cache data.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="shared-pool" type="shared-pool-spec" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:documentation>
            Defines a pool of server-side storage resource to be shared amongst multiple caches.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="restartable" type="restartable-spec" minOccurs="0">
        <xs:annotation>
          <xs:documentation>
            Specifies the restartability configuration of the entity.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
    <xs:attribute name="auto-create" type="xs:boolean" use="optional" default="false">
      <xs:annotation>
        <xs:documentation>xml:lang="en">
          True if server side components should be automatically created if they are absent.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="default-resource-spec">
    <xs:attributeGroup ref="from-required"/>
  </xs:complexType>

  <xs:complexType name="shared-pool-spec">
    <xs:complexContent>
      <xs:extension base="eh:memory-type">
        <xs:attribute name="name" type="xs:string" use="required">
          <xs:annotation>
            <xs:documentation>
              Shared pool name.
            </xs:documentation>
          </xs:annotation>
        </xs:attribute>
        <xs:attributeGroup ref="from-optional"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="restartable-spec">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="offheap-mode" type="offheap-mode-spec" use="optional">
          <xs:annotation>
            <xs:documentation xml:lang="en">
              Specifies the mode of the restartable off-heap.
            </xs:documentation>
          </xs:annotation>
        </xs:attribute>
        <xs:attribute name="restart-identifier" type="xs:string" use="optional">
          <xs:annotation>
            <xs:documentation xml:lang="en">
              Specifies the portable unique identifier identifying this clustered tier manager
            </xs:documentation>
          </xs:annotation>
        </xs:attribute>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:simpleType name="offheap-mode-spec">
    <xs:restriction base="xs:string">
      <xs:enumeration value="FULL"/>
      <xs:enumeration value="PARTIAL"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="clustered-dedicated" type="clustered-dedicated-resource-type" substitutionGroup="eh:resource">
    <xs:annotation>
      <xs:documentation>
        Clustered cache resource with a dedicated size.
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <xs:complexType name="clustered-dedicated-resource-type">
    <xs:complexContent>
      <xs:extension base="eh:memory-type">
        <xs:attributeGroup ref="from-optional"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:element name="clustered-restartable-dedicated" type="clustered-restartable-dedicated-resource-type"
              substitutionGroup="eh:resource">
    <xs:annotation>
      <xs:documentation>
        Restartable clustered cache resource with a dedicated size.
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <xs:element name="clustered-shared" type="clustered-shared-resource-type" substitutionGroup="eh:resource">
    <xs:annotation>
      <xs:documentation>
        Clustered cache resource sharing a pool with other cache resources.
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <xs:complexType name="clustered-shared-resource-type">
    <xs:attribute name="sharing" type="xs:string" use="required">
      <xs:annotation>
        <xs:documentation>
          Name of the shared pool this resource uses.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>

  <xs:complexType name="clustered-restartable-dedicated-resource-type">
    <xs:complexContent>
      <xs:extension base="clustered-dedicated-resource-type">
        <xs:attributeGroup ref="data-percent-attr"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:element name="clustered-restartable-shared" type="clustered-shared-resource-type"
              substitutionGroup="eh:resource">
    <xs:annotation>
      <xs:documentation>
        Clustered cache resource sharing a pool with other cache resources.
      </xs:documentation>
    </xs:annotation>
  </xs:element>

  <xs:element name="clustered" substitutionGroup="eh:resource">
    <xs:annotation>
      <xs:documentation>
        Clustered cache resource which inherits the resource pool configured on the server.
      </xs:documentation>
    </xs:annotation>
    <xs:complexType/>
  </xs:element>

  <xs:attributeGroup name="data-percent-attr">
    <xs:attribute name="data-percent" type="data-percent-type" use="optional">
      <xs:annotation>
        <xs:documentation>
          Controls what percentage of offHeap to use for value cache.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:attributeGroup>

  <xs:simpleType name="data-percent-type">
    <xs:restriction base="xs:nonNegativeInteger">
      <xs:maxInclusive value="99"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:attributeGroup name="from-optional">
    <xs:attribute name="from" type="xs:string" use="optional">
      <xs:annotation>
        <xs:documentation>
          Optional reference to a server-side storage resource.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:attributeGroup>

  <xs:attributeGroup name="from-required">
    <xs:attribute name="from" type="xs:string" use="required">
      <xs:annotation>
        <xs:documentation>
          Required reference to a server-side storage resource.
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:attributeGroup>

  <xs:element name="clustered-store" type="clustered-store-type" substitutionGroup="eh:service-configuration"/>

  <xs:complexType name="clustered-store-type">
    <xs:attribute name="consistency" type="consistency-type" default="eventual"/>
  </xs:complexType>

  <xs:simpleType name="consistency-type">
    <xs:restriction base="xs:string">
      <xs:enumeration value="eventual"/>
      <xs:enumeration value="strong"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="disk-restartable" type="eh:memory-type" substitutionGroup="eh:resource">
    <xs:annotation>
      <xs:documentation>
        Resource for FRS backed enterprise offheap store.
      </xs:documentation>
    </xs:annotation>
  </xs:element>

</xs:schema>