<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

  <bean name="datasetManager" class="com.terracottatech.store.spring.ClusteredDatasetManagerFactoryBean">
    <property name="config.clusterURI" value="passthrough://stripe"/>
  </bean>

  <bean name="personsDataset" class="com.terracottatech.store.spring.DatasetFactoryBean">
    <property name="datasetManager" ref="datasetManager"/>
    <property name="config.name" value="persons"/>
    <property name="config.type" value="#{ T(com.terracottatech.store.Type).STRING }"/>
    <property name="config.offheapResourceName" value="offheap"/>
  </bean>

</beans>
