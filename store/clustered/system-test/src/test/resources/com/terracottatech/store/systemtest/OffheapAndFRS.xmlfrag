<config xmlns:ohr="http://www.terracotta.org/config/offheap-resource">
  <ohr:offheap-resources>
    <ohr:resource name="limited-server-resource" unit="MB">5</ohr:resource>
    <ohr:resource name="primary-server-resource" unit="MB">512</ohr:resource>
    <ohr:resource name="secondary-server-resource" unit="MB">256</ohr:resource>
    <ohr:resource name="tiny-server-resource" unit="B">1</ohr:resource>
  </ohr:offheap-resources>
</config>
<config>
  <data:data-directories xmlns:data="http://www.terracottatech.com/config/data-roots">
    <data:directory name="cluster-disk-resource" use-for-platform="true">ClusterTestDisk</data:directory>
    <data:directory name="secondary-disk-resource">SecondaryTestDisk</data:directory>
  </data:data-directories>
</config>
